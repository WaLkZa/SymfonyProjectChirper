{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="chirps">
            <h2 class="titlebar">Discover</h2>
            <div id="userlist">
                {% for user in users %}
                    <div class="userbox">
                        <div><a href="{{ path('user_foreign_profile', {userId: user.id}) }}" class="chirp-author">{{ user.username }}</a></div>

                        <div class="user-details">
                            {#<a href="">delete user + his chirps</a>#}
                            <span>{{ user.chirpsCounter }} chirps</span> | <span>{{ user.followingCounter }} following</span> | <span>{{ user.followersCounter }} followers</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

