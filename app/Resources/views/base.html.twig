<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Chirper!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
        <script src="{{ asset('js/main.js') }}"></script>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="main">
        {% block header %}
            <header><span>Chirper</span></header>

            {% if app.user %}
                <div class="menu">
                    <a href="#">Home</a>
                    <a href="{{ path('user_discover') }}">Discover</a>
                    <a href="{{ path('user_profile') }}">Me</a>
                    <a href="{{ path('security_logout') }}">Logout</a>
                </div>
            {% endif %}
        {% endblock %}
        {% block body %}
        {% endblock %}

        {% block footer %}
            <footer><p>Chirper Â© 2019</p></footer>
        {% endblock %}
    </div>
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
    {% endblock %}

    </body>
</html>
